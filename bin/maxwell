#!/bin/bash

base_dir=$(dirname $0)/..

CLASSPATH=$CLASSPATH:$base_dir/target/classes:../open-replicator/target/classes

for file in $base_dir/target/maxwell-*/*/lib/*.jar lib/*.jar target/dependency/*.jar
do
  CLASSPATH=$CLASSPATH:$file
done

if [ -z "$JAVA_HOME" ]; then
  JAVA="java"
else
  JAVA="$JAVA_HOME/bin/java"
fi

exec $JAVA $JAVA_OPTS -Dfile.encoding=UTF-8 -Dlog4j.shutdownCallbackRegistry=com.djdch.log4j.StaticShutdownCallbackRegistry -cp $CLASSPATH com.zendesk.maxwell.Maxwell "$@"

