#!/bin/bash

base_dir=$(dirname $0)/..

CLASSPATH=$CLASSPATH:$base_dir/target/classes

for file in target/maxwell-*/*/lib/*.jar lib/*.jar
do
  CLASSPATH=$CLASSPATH:$file
done

if [ -z "$JAVA_HOME" ]; then
  JAVA="java"
else
  JAVA="$JAVA_HOME/bin/java"
fi

exec $JAVA -cp $CLASSPATH com.zendesk.maxwell.Maxwell "$@"

