CREATE database `ser3`;
CREATE table `ser3`.`tbl` ( id mediumint, `a` varchar(255) character set latin1, `b` mediumtext, `c` enum('a','b'), primary KEY(id) );
ALTER table `ser3`.`tbl` add column `d` blob not null after `b`;
-> { type: "table-alter",
     database: "ser3",
     table: "tbl",
     column-changes: [ {
                         type: "column-add",
                         name: "d",
                         position: "AFTER b",
